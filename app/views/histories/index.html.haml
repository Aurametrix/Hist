= render :file => 'search/index.html.haml'

%h1 History

%table
  %tr
    %th Note
    %th
    %th
    %th

  - @histories.each do |history|
    %tr
      %td= history.note
      %td= link_to 'Show', history
      %td= link_to 'Edit', edit_history_path(history)
      %td= link_to 'Destroy', history, :confirm => 'Are you sure?', :method => :delete

%br

#history
  - @histories.each do |diary_entry|
    .entry
      %h6= history.f.name
      %p= history.note
      .created_at= time_ago_in_words history.created_at

= link_to 'New diary_entry', new_history_path
